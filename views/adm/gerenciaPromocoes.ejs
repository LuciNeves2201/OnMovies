<%- include("headerAdm.ejs")%>
<%- include("navAdm.ejs")%>
        <section class="container">
            <h2 class="text-center">Gerenciador de Promoções</h2>
            <form class="w-50 mx-auto p-3 mt-4 mb-5" style="border: 2px solid #e8673f; border-radius: 12px"
                id="formPromo" method="get" action="">
                <fieldset>
                    <div class="form-group">
                        <label for="promo">Adicionar a lista de promoções?<span style="color:red ;">*</span></label>
                        </br><input type="radio" value="1" id="promo_sim" name="promo"> Sim
                        </br><input type="radio" value="0" id="promo_nao"  checked name="promo"> Não
                    </div>
                    <div class="row mt-3">
                        <label class="col-sm-4">Preço:<span style="color:red ;">*</span></label>
                        <input class="form-control col-sm-2" name="valor" type="number" value="10.00">
                    </div>
                    <div class="form-group">
                        <label>Filme:<span style="color:red ;">*</span> </label> <br>
                        <select name="id">
                            <%filmes.forEach((item)=>{%>
                                <option value="<%=item.filmes_id%>">
                                    <%=item.titulo%>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div>
                        <button class="button" id="confirmar" type="button" data-toggle="modal" data-target="#modal-mensagem">Confirmar</button>
                    </div>
                </fieldset>
            </form>
            <%- include("../modal.ejs")%>
        </section>
<script src="../../administrador/js/gerenciaPromocoes.js"></script>
<%- include("../footer.ejs")%>
