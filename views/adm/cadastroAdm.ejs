<%- include("headerAdm.ejs")%>
<%- include("navAdm.ejs")%>
        <section class="container">
            <h2 class="text-center">Cadastro de Administrador</h2>
            <form class="w-50 mx-auto p-3 mt-4 mb-5" style="border: 2px solid #e8673f; border-radius: 12px"
                id="formCadastro" method="post" action="">
                <fieldset>
                    <legend>Preencha os dados de cadastro</legend>
                    <div class="form-group">
                        <label>Nome:<span style="color:red ;">*</span></label>
                        <input class="form-control" id="nome" name="nome" type="text" maxlength="50">
                    </div>
                    <div class="form-group">
                        <label>E-mail:<span style="color:red ;">*</span> </label> <br>
                        <input class="form-control" id="email" name="email" type="email">
                        <small style="color:rgb(226, 225, 223) ;">seunome@example.com</small>
                    </div>
                    <div class="form-group">
                        <label>Senha:<span style="color:red ;">*</span></label> <br>
                        <input class="form-control" id="senha" name="senha" type="password" maxlength="8">
                        <small style="color:rgb(226, 225, 223) ;">digite a senha com 8 caracteres</small>
                    </div>
                    <div class="form-group">
                        <label>Confirmar Senha:<span style="color:red ;">*</span> </label> <br>
                        <input class="form-control" id="confirmarSenha" name="confirmar-senha" type="password"
                            maxlength="8">
                    </div>
                    <p>Escolha o tipo de administrador:<span style="color:red ;">*</p>
                    <Select class="mb-4" name="nivel">
                        <option value="Basic">Basic</option>
                        <option value="Master">Master</option>
                    </Select>
                    <div>
                        <button class="button" id="btCadastro" type="button" data-toggle="modal" data-target="#modal-mensagem">Salvar</button>
                    </div>
                </fieldset>
            </form>
            <%- include("../modal.ejs")%>
        </section>
       
<script src="../../administrador/js/cadastro-adm.js"></script>

<%- include("../footer.ejs")%>