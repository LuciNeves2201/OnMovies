        <section class="container">
            <h2 class="text-center">Bem-vindo!</h2>
            <p class="text-center">Estamos felizes em ter vocÃª aqui</p>
            <form class="w-50 mx-auto p-3 mt-4 mb-3" style="border: 2px solid #e8673f; border-radius: 12px"
                id="formCadastro" method="post" action="">
                <fieldset>
                    <legend>Preencha seus dados</legend>
                    <div class="form-group">
                        <label>Nome:<span style="color:red ;">*</span></label>
                        <input class="form-control" id="nome" name="nome" type="text" maxlength="50">
                    </div>
                    <div class="form-group">
                        <label>E-mail:<span style="color:red ;">*</span> </label> <br>
                        <input class="form-control" id="email" name="email" type="email">
                        <small style="color:rgb(226, 225, 223) ;">seunome@example.com</small>
                    </div>
                    <div class="form-group">
                        <label>Telefone:<span style="color:red ;">*</span></label> <br>
                        <input class="form-control" maxlength="15" id="telefone" name="telefone" type="text" pattern="\([0-9]{2}\)[\s][0-9]{4}-[0-9]{4,5}">
                        <small style="color:rgb(226, 225, 223) ;">(xx) xxxxx-xxxx</small>
                    </div>
                    <div class="form-group">
                        <label>Senha:<span style="color:red ;">*</span></label> <br>
                        <input class="form-control" id="senha" name="senha" type="password" maxlength="8">
                        <small style="color:rgb(226, 225, 223) ;">digite sua senha com 8 caracteres</small>
                    </div>
                    <div class="form-group">
                        <label>Confirmar Senha:<span style="color:red ;">*</span> </label> <br>
                        <input class="form-control" id="confirmarSenha" name="confirmar-senha" type="password"
                            maxlength="8">
                    </div>
                    <div class="form-group">
                        <p>Escolha o seu plano<span style="color:red ;">*</p>
                            <Select class="mb-4" name="tipo">
                                <option value="2">Basic</option>
                                <option value="1">Premium</option>
                            </Select>
                        </div>
                    <div>
                        <button class="button" id="btCadastro" data-toggle="modal" data-target="#modal-mensagem" type="button">Confirmar</button>
                    </div>
                    <%- include("modal.ejs")%>
                    <%- include("modalCupom.ejs")%>
                </fieldset>
            </form>
        </section>
<script src="../js/cadastro.js"></script>
